{
	"compilerOptions": {
		"target": "ES6",
		"lib": [
			"dom",
			"esnext"
		],
		"types": [
			"@testing-library/jest-dom"
		],
		"jsx": "react-jsx",
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"declaration": true,
		"paths": {
			"craftly/*": [
				"src/components/*"
			]
		},
		"resolveJsonModule": true,
		"allowJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}